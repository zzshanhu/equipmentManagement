<script>
    // 申请模态框
    $('.borrowbtn').click(function () {
        $('#borrowModal').modal('show');
    })
    $(function () {
        $('#submitBtn').click(function(){
            var equipClass = $('#inputClass3').val();
            var equipName = $('#inputName3').val();
            var equipID = $('#inputNum3').val();
            var userTel = $('#inputTel3').val();
            var returnTime = $('#inputDate3').val();
            $.ajax({
                url:'/referBorrowMsg',
                type:'POST',
                dataType:'JSON',
                data:{
                    equipClass:equipClass,
                    equipName:equipName,
                    equipID:equipID,
                    userTel:userTel,
                    returnTime:returnTime
                },
                complete:function (data) {
                    if(data==1){
                        alert('借用成功，请及时查看申请审批信息。')
                    }
                    $('#borrowModal').modal('hide');
                }
            })
        });
    });
</script>